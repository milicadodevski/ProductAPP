@model ProductApp.Proizvod

@{
    ViewBag.Title = "Izmeni";
}
    <head>
        <meta name='viewport' content='width=device-width, initial-scale=1'>
        <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    </head>
<style>
    .fa-pen:before {
            width: 79px;
            height: 77px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #333436;
            color: white;
            border-radius: 50%;
            margin-right: 25px;
        }
    h2 {
        font-weight: 500;
        color: black;
        font-size: 20px;
        padding-left: 200px;
    }

    .form-horizontal {
        padding-left: 200px;
        color: black;
        width: 600px;
    }

    .field-validation-error {
        color: red;
    }

    .form-group {
        margin: 0 auto;
        padding: 10px;
    }

    .btn-primary {
        padding: 20px;
        background-color: #009688;
        border: 0px;
        color: white;
    }

        .btn-primary:hover {
            background-color: burlywood;
            transition: 0.6s;
            transform: scale(1.2);
        }
</style>
<h2>Izmeni proizvod</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProizvodID)

    <div class="form-group">
        @Html.LabelFor(model => model.Naziv)
        @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Kategorija)
        @Html.EditorFor(model => model.Kategorija, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Kategorija, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Proizvodjac)
        @Html.EditorFor(model => model.Proizvodjac, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Proizvodjac, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Dobavljac)

        @Html.EditorFor(model => model.Dobavljac, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Dobavljac, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Opis)

        @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Cena)

        @Html.EditorFor(model => model.Cena, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Cena, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sačuvaj izmene" class="btn-primary" />
            @Html.ActionLink("Nazad", "Index", new { id = Model.ProizvodID }, new { @class = "btn-primary" })
        </div>
    </div>
</div>
}

