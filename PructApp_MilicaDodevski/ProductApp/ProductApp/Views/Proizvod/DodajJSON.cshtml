
@{
    ViewBag.Title = "DodajJSON";
}
    <head>
        <meta name='viewport' content='width=device-width, initial-scale=1'>
        <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    </head>
<style>
    .fa-pen:before {
            width: 79px;
            height: 77px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #333436;
            color: white;
            border-radius: 50%;
            margin-right: 25px;
        }
    h2 {
        font-weight: 500;
        color: black;
        font-size: 20px;
        padding-left: 200px;
    }
    .form-horizontal {
        padding-left:200px;
        color: black;
        width: 950px;
    }
     .btn-primary {
        padding: 20px;
        background-color: #009688;
        border: 0px;
        margin-right:20px;
        color: white;
    }

        .btn-primary:hover {
            background-color: burlywood;
            transition: 0.6s;
            transform: scale(1.2);
        }
</style>
<h2>Dodaj JSON</h2>
<hr />
    @using (Html.BeginForm("DodajJSON", "Proizvod", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
<div class="form-horizontal">

    <input type="file" name="jsonFile" />
    <br /><br />
    <input type="submit" value="DODAJ" class="btn-primary" />
    @Html.ActionLink("Nazad", "Index","", new { @class = "btn-primary" })

</div>
           }
